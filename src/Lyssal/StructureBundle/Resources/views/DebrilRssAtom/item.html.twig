{% if item.title is not null -%}
	<h2>{{ item.title|rawSecure }}</h2>
{%- endif %}
{% if item.description is not null -%}
	<p class="description">{{ item.description|rawSecure }}</p>
{%- endif %}
{% if item.author is not null -%}
	<p class="author">{{ item.author }}</p>
{%- endif %}
{% if item.updated is not null -%}
	<p class="updated">{{ item.updated|date('d/m/Y') }}</p>
{%- endif %}
{% if item.link is not null -%}
	<p class="link"><a href="{{ item.link }}">{{ item.title }}</a></p>
{%- endif %}
