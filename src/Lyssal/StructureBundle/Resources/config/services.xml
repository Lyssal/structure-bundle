<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="pagerfanta.xml" />
    </imports>
    
    <services>
        <service id="lyssal.decorator" class="Lyssal\StructureBundle\Decorator\DecoratorManager"></service>
        
        <service id="lyssal.appellation" class="Lyssal\StructureBundle\Appellation\AppellationManager"></service>
        
    	<service id="lyssal.structure.twig.extension.appellation" class="Lyssal\StructureBundle\Twig\Extension\AppellationExtension">
            <argument type="service" id="lyssal.appellation" />
            <tag name="twig.extension" />
        </service>
        <service id="lyssal.structure.twig.extension.filter" class="Lyssal\StructureBundle\Twig\Extension\FilterExtension">
            <tag name="twig.extension" />
        </service>
    </services>

</container>
